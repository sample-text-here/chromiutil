{
	"manifest_version": 3,
	"name": "chromiutils",
	"description": "my personal utility scripts for chromium",
	"version": "0.2.0",
	"permissions": [
		"tabs",
		"activeTab",
		"tabGroups",
		"downloads",
		"downloads.shelf",
		"commands",
		"scripting"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"commands": {
		"pip": {
			"suggested_key": "Alt+P",
			"description": "Activate picture in picture picker"
		},
		"prevTab": {
			"suggested_key": "Alt+1",
			"description": "(prev. tab, placeholder keyboard shortcut)"
		},
		"nextTab": {
			"suggested_key": "Alt+2",
			"description": "(next tab, placeholder keyboard shortcut)"
		},
		"toggleShelf": {
			"suggested_key": "Alt+S",
			"description": "toggle download shelf"
		}
	}
}

